@model GradExam.ViewModels.EditQuestionAnswerViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<h4>QuesAnswer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="QuesAnswer.Id" type="hidden" />
            <div class="form-group">
                @Html.LabelFor(model => model.QuesAnswer.Question, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.QuesAnswer.Question, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="QuesAnswer.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuesAnswer.Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.QuesAnswer.Answer, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="QuesAnswer.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuesAnswer.Course, new { htmlAttributes = new { @class = "form-control" } })
                @Html.DropDownListFor(model => model.CourseId, new SelectList(Model.Courses, "Id", "Name"), "--- Courses ---", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuesAnswer.LearnOutcome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.DropDownListFor(model => model.LearnOutcomeId, new SelectList(Model.LearnOutcomes, "Id", "LearningOutcome"), "--- Learning Outcomes ---", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

